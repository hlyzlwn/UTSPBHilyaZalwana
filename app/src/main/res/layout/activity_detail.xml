<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.utspb.ui.DetailActivity">

    <TextView
        android:id="@+id/githubuser"
        android:layout_width="416dp"
        android:layout_height="77dp"
        android:background="#51829B"
        android:fontFamily="@font/alfa_slab_one"
        android:textColor="@color/white"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:text="Github User"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="213dp"
        android:layout_height="167dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="@+id/githubuser"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/githubuser"
        app:layout_constraintTop_toTopOf="@+id/githubuser" />

    <TextView
        android:id="@+id/username"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_marginTop="216dp"
        android:fontFamily="@font/acme"
        android:gravity="clip_horizontal"
        android:scaleType="fitCenter"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="@+id/imageview"
        app:layout_constraintStart_toStartOf="@+id/imageview"
        app:layout_constraintTop_toTopOf="@+id/imageview" />

    <TextView
        android:id="@+id/name"
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/acme"
        android:gravity="clip_horizontal"
        android:scaleType="fitCenter"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="@+id/username"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/username"
        app:layout_constraintTop_toTopOf="@+id/username" />

    <TextView
        android:id="@+id/bio"
        android:layout_width="304dp"
        android:layout_height="228dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/acme"
        android:gravity="clip_horizontal"
        android:scaleType="fitCenter"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_gravity="clip_horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>